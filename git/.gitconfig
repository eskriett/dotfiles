[core]
    editor = vim
    pager = cat
    excludesfile = ~/.gitignore_global

[user]
    name = Hayden Eskriett
    email = hayden@eskriett.com

[github]
    user = eskriett

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[alias]
    # List commands
    br = branch
    branches = branch -a
    remotes = remote -v
    tags = tag -l

    # Common
    a = add
    cl = clone
    co = checkout
    d = difftool
    pl = pull --rebase
    pu = push

    # Commit commands
    c = commit
    cm = commit -m
    ca = commit -a
    cam = commit -am

    # Status commands
    s = status -s
    ss = status

    # Reset commands
    unstage = reset HEAD
    uns = reset HEAD

    # Log commands
    l = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    ll = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
[credential]
	helper = cache
[push]
	default = simple
